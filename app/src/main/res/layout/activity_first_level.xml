<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bigskyway.skyler.prairielandadventures.FirstLevel"
    android:id="@+id/RelativeLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello"
        android:id="@+id/txtEnglishAnswer"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="175dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtEnglishAnswer"
        android:weightSum="1"
        android:id="@+id/snakelayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:id="@+id/ivsnake1"
            android:layout_weight=".33"
            android:background="@drawable/startersnaketwo" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:id="@+id/ivsnake2"
            android:layout_weight=".33"
            android:background="@drawable/startersnaketwo"
            android:focusableInTouchMode="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:layout_weight=".33"
            android:background="@drawable/startersnaketwo"
            android:id="@+id/ivsnake3" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hola"
        android:id="@+id/textView2"
        android:layout_below="@+id/snakelayout"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hasta Mañana"
        android:id="@+id/textView1"
        android:layout_below="@+id/snakelayout"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Adiós"
        android:id="@+id/textView3"
        android:layout_below="@+id/snakelayout"
        android:layout_centerHorizontal="false"
        android:gravity="right"
        android:layout_alignRight="@+id/snakelayout"
        android:textStyle="bold"
        android:textSize="20dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txtEnglishAnswer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/FrameLayout">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:id="@+id/Gary"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/ggggbehindview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Health"
            android:id="@+id/TxtHealth"
            android:layout_gravity="left|bottom"
            android:layout_marginTop="30dp" />

    </FrameLayout>
</RelativeLayout>
