<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bigskyway.skyler.prairielandadventures2" >


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>


        <activity
            android:name="com.bigskyway.skyler.prairielandadventures2.MainScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.bigskyway.skyler.prairielandadventures2.MultiplayerMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.bigskyway.skyler.prairielandadventures2.MenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_menu"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bigskyway.skyler.prairielandadventures2.FirstLevel"
            android:label="@string/title_activity_first_level"
            android:parentActivityName="com.bigskyway.skyler.prairielandadventures2.MainScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bigskyway.skyler.prairielandadventures2.MainScreenActivity" />
        </activity>
        <activity
            android:name="com.bigskyway.skyler.prairielandadventures2.ChallengeFirst"
            android:label="@string/title_activity_first_level"
            android:parentActivityName="com.bigskyway.skyler.prairielandadventures2.MultiplayerMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bigskyway.skyler.prairielandadventures2.MultiplayerMenuActivity" />
        </activity>
        <activity
            android:name="com.bigskyway.skyler.prairielandadventures2.Shop"
            android:label="@string/title_activity_shop" >
        </activity>
        <activity
            android:name="com.bigskyway.skyler.prairielandadventures2.Unlock"
            android:label="@string/title_activity_unlock"
            android:parentActivityName="com.bigskyway.skyler.prairielandadventures2.Shop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bigskyway.skyler.prairielandadventures2.Shop" />
        </activity>
    </application>

</manifest>
